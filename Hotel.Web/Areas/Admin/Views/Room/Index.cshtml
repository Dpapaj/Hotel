@using Hotel.Utilities
@model PageResult<Hotel.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index - Rooms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                RoomNumber
            </th>
            <th>
                RoomPrice
            </th>
            <th>
                Type
            </th>
            <th>
                Status
            </th>
            <th>
                Description
            </th>
            <th>
                PictureURL
            </th>
            <th>
                WIFI
            </th>
            <th>
                AC
            </th>
            <th>
                Bathroom
            </th>
            <th>
                HotelInfoId
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="~/Images/@item.PictureURL" alt="Room Image" class="room-image" width="150" height="100" />
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.WIFI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bathroom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelInfo.Name)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pageNumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-pagenumber-param="pageNumber"
          asp-controller="Hotel"
          asp-action="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
</cs-pager>

